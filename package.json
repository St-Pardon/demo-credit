{
  "name": "demo-credit",
  "version": "1.0.0",
  "description": "a simple ewallaet application",
  "main": "index.js",
  "scripts": {
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch",
    "dev": "ts-node-dev --respawn ./index.ts",
    "build": "tsc",
    "start": "node ./dist/index.js",
    "start:dev": "ts-node ./index.ts",
    "db:create": "npx ts-node ./src/utils/createdb.utils.ts",
    "db:migrate": "npx knex migrate:latest --knexfile ./src/utils/knexfile.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/St-Pardon/d-credit.git"
  },
  "keywords": [
    "ewallet",
    "banking",
    "credit"
  ],
  "author": "onyedikachi onu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/St-Pardon/d-credit/issues"
  },
  "homepage": "https://github.com/St-Pardon/d-credit#readme",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.1.4",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "knex": "^2.4.2",
    "mysql2": "^3.3.3",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/passport": "^1.0.12",
    "@types/passport-jwt": "^3.0.8",
    "@types/passport-local": "^1.0.35",
    "@types/pg": "^8.10.2",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "jest": "^29.5.0",
    "pg": "^8.11.0",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
